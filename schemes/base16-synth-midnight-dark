set $base00 #040404
set $base01 #141414
set $base02 #242424
set $base03 #61507A
set $base04 #BFBBBF
set $base05 #DFDBDF
set $base06 #EFEBEF
set $base07 #FFFBFF
set $base08 #B53B50
set $base09 #E4600E
set $base0A #DAE84D
set $base0B #06EA61
set $base0C #7CEDE9
set $base0D #03AEFF
